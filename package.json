{
  "name": "recipe-platform",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "vitest",
    "test:run": "vitest run --reporter=verbose --pool=forks --poolOptions.forks.singleFork=true",
    "test:utils": "node --max-old-space-size=2048 ./node_modules/vitest/vitest.mjs run src/tests/utils/ --reporter=verbose --pool=forks --poolOptions.forks.singleFork=true --poolOptions.forks.isolate=false",
    "test:hooks": "node --max-old-space-size=2048 ./node_modules/vitest/vitest.mjs run src/tests/hooks/ --reporter=verbose --pool=forks --poolOptions.forks.singleFork=true --poolOptions.forks.isolate=false",
    "test:services": "node --max-old-space-size=1536 ./node_modules/vitest/vitest.mjs run src/tests/services/RecipeService.test.ts --reporter=verbose --pool=forks --poolOptions.forks.singleFork=true --poolOptions.forks.isolate=false",
    "test:components": "node --max-old-space-size=2048 ./node_modules/vitest/vitest.mjs run src/tests/components/ --reporter=verbose --pool=forks --poolOptions.forks.singleFork=true --poolOptions.forks.isolate=false",
    "test:all": "npm run test:utils && npm run test:hooks && npm run test:services && npm run test:components",
    "test:all:save": "npm run test:utils -- --reporter=tap > test-results.txt 2>&1 && npm run test:hooks -- --reporter=tap >> test-results.txt 2>&1 && npm run test:services -- --reporter=tap >> test-results.txt 2>&1 && npm run test:components -- --reporter=tap >> test-results.txt 2>&1"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "browser-image-compression": "^2.0.2",
    "firebase": "^12.6.0",
    "firebase-admin": "^13.6.0",
    "framer-motion": "^12.23.26",
    "next": "16.0.10",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "react-icons": "^5.5.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.19.26",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.22",
    "eslint": "^9",
    "eslint-config-next": "16.0.10",
    "jsdom": "^27.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
